<div class="container">
  <div class="row">

    <h2>配送先一覧/登録</h2>

    <% if @address.errors.any? %>
        <h4>入力した内容にエラーが<%= @address.errors.count %>件あります</h4>
        <ul>
          <% @address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>


    <!-- ここから新規登録部分　new -->
    <div class="col-md-8">
    	<%= form_for(@address) do |f| %>

    	  <table class="table table-striped">
        <tr>
          <th>郵便番号</th><td><%= f.text_field :post_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>宛名</th><td><%= f.text_field :name %></td>
        </tr>
      </table>

    </div>
    <div class="col-md-4">
    	   <%= f.submit "登録する" %>
    </div>
    	<% end %>
    <!-- ここまで新規登録部分　new -->



    <!-- ここから一覧部分　index -->
        <table class="table table-striped">
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
              <th></th>
              <th colspan="5"></th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
              <tr>
                <td><nobr>〒</nobr><%= address.post_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
    				<botton type="botton" class="btn btn-default">
    					<%= link_to "編集する", edit_address_path(address.id) %>
    				</botton>
                </td>
                <td>
                	<botton type="botton" class="btn btn-default">
    					<%= link_to "削除する", address_path(address.id), method: :delete, data: { confirm: '本当に消しますか?' } %>
    				</botton>
    			</td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @addresses, class: "paginate" %>
    <!-- ここまで一覧部分　index -->

  </div>
</div>
