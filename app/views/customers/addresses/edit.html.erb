<div class="container">
	<div class="row">
		<div style="padding-top: 30px;"></div>

		<h2>配送先編集</h2>


		<% if @address.errors.any? %>
		    <h4>入力した内容にエラーが<%= @address.errors.count %>件あります</h4>
		    <ul>
		      <% @address.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
		<% end %>

		<div class="col-md-8" style="padding: 30px 0;">

			<%= form_for(@address) do |f| %>

				<table class="table table-striped">
					<tr>
			          <th>郵便番号</th><td><%= f.text_field :post_code, :size=>"15" %></td>
			        </tr>
			        <tr>
			          <th>住所</th><td><%= f.text_field :address, :size=>"60" %></td>
			        </tr>
			        <tr>
			          <th>宛名</th><td><%= f.text_field :name, :size=>"30" %></td>
			        </tr>
			    </table>
			    <%= f.submit "編集する", :class => "btn btn-default btn-lg pull-right" %>
			<% end %>
		</div>

	</div>
</div>

