<div class="container">
	<div class="row">

<h1>マイページ</h1>
<% if flash[:notice] %>
<h1><%= flash[:notice] %></h1>
<% end %>

<table>

<tr>
	<th><h2>登録情報</h2></th>
	<th><%= link_to "編集する", customers_myedit_path(current_customer) %></th>
	<th><%= link_to "パスワードを変更する", edit_customer_registration_path %></th>

</tr>


<tr>
   <th>氏名</th>     <th><%= @customer.last_name %></th><th><%= @customer.first_name %></th>
</tr>

<tr>
   <th>フリガナ</th>     <th><%= @customer.last_name_kana %></th><th><%= @customer.first_name_kana %></th>
</tr>

<tr>
   <th>郵便番号</th>     <th><%= @customer.post_code %></th>
</tr>

<tr>
   <th>住所</th>     <th><%= @customer.address %></th>
</tr>

<tr>
   <th>電話番号</th>     <th><%= @customer.phone_number %></th>
</tr>

<tr>
   <th>メールアドレス</th>     <th><%= @customer.email %></th>
</tr>

<tr>
   <th><%= link_to "配送先一覧を見る", addresses_path(current_customer) %></th>     <th><%= link_to "注文一覧を見る", order_path(current_customer) %></th>
</tr>
</table>

	</div>
</div>