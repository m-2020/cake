<div class="container">
	<div class="row">

		<h3>ショッピングカート</h3>

		<botton type="botton" class="btn btn-default">
			<!-- cart_products_controllerのdestroy_allアクションへ -->
			<%= link_to "カートを空にする",cart_produsts_path, method: :delete, data: { confirm: '本当に消しますか?' } %>
		</botton>

		<!-- ここからカート一覧表示index部分 -->
		    <table class="table table-striped">
		      <thead>
		        <tr>
		          <th>商品名</th>
		          <th></th>
		          <th>単価(税込)</th>
		          <th>数量</th>
		          <th></th>
		          <th>小計</th>
		          <th></th>
		          <th colspan="7"></th>
		        </tr>
		      </thead>
		      <tbody>
		        <% @cart_products.each do |cart_product| %>
		          <tr>
		            <td><%= attachment_image_tag cart_product.product, :image, :fill, 100, 100 %></td>
		            <td><%= cart_product.product.name %></td>
		            <td><% price = cart_product.product.price*1.1 %>
		            	<%= price.floor.to_s(:delimited) %>
		            </td>

					<!-- submitを実行すると、url:cart_productのPATCHメソッドへ飛ぶ -->
					<%= form_for(cart_product, url:cart_product_path(cart_product.id), method: :patch) do |cart_product| %>
			            <td><%= cart_product.number_field :quantity, in: 1..100 %></td>
			            <td><%= cart_product.submit "変更" %></td>
			        <% end %>

		            <td><% cart_price = cart_product.product.price*cart_product.quantity*1.1 %>
		            	<%= cart_price.floor.to_s(:delimited) %>
		            </td>
		            <td>
		            	<!-- cart_products_controllerのdestroyアクションへ -->
		            	<botton type="botton" class="btn btn-default">
							<%= link_to "削除する", cart_product_path(cart_product.id), method: :delete, data: { confirm: '本当に消しますか?' } %>
						</botton>
					</td>
		          </tr>
		        <% end %>
		      </tbody>
		    </table>


		<!-- ここまでカート一覧表示index部分 -->

		<botton type="botton" class="btn btn-default"><%= link_to '買い物を続ける', root_path %></botton>
		<botton type="botton" class="btn btn-default"><%= link_to '再計算', cart_products_path %></botton>

		<!-- ここから合計金額表示部分 -->
		<p>合計金額</p>
		<nobr>¥</nobr>
		(@cart_products.product.price*cart_product.quantity*1.1).floor.to_s(:delimited)
		<nobr>(税込)</nobr>
		<!-- ここまで合計金額表示部分 -->

		<botton type="botton" class="btn btn-default"><%= link_to '情報入力に進む', new_order_path %></botton>
	</div>
</div>