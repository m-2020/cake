<h2>注文確認画面</h2>
<h3>注文情報確認</h3>
<!-- ここから注文商品詳細部分 -->
<!-- ここからカート一覧表示index部分 -->
    <table class=“table table-striped”>
      <thead>
        <tr>
          <th>イメージ画像</th>
          <th>商品名</th>
          <th>単価</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="5"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_products.each do |cart_product| %>
          <tr>
            <td><%= attachment_image_tag cart_product.product, :image, :fill, 50, 50 %></td>
            <td><%= cart_product.product.name %></td>
            <td><% price = cart_product.product.price*1.1 %>
              <%= price.floor.to_s(:delimited) %>
            </td>
            <td><%= cart_product.quantity %></td>
            <td><% cart_price = cart_product.product.price*cart_product.quantity*1.1 %>
              <%= cart_price.floor.to_s(:delimited) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
<!-- ここまでカート一覧表示index部分 -->
<%= form_for(@order, url:orders_path, method: :post) do |f| %>
  <p>支払い方法</p>
    <%= @order.payment_str %>
	<p>お届け先</p>
    <% if params[:order][:address] == "0" %>
      <%= @order.post_code %>
    <% else %>
      <%= @customer.post_code %>
      <%= @customer.address %>
      <%= @customer.first_name %>
      <%= @customer.last_name %>
    <% end %>


<!-- submitを実行すると、url:orders_pathのPOSTメソッドへ飛ぶ部分 -->

  <%= f.hidden_field :payment, :value => @order.payment %>
  <%= f.hidden_field :post_code, :value => @order.post_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :name, :value => @order.name %>

  <%= f.submit '購入を確定する' %>
<% end %>
