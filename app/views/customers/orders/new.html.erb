<div class="container">
	<div class="row">
		<h2>購入情報入力</h2>

		<%= form_for(@order, url: customers_orders_path) do |f| %>

		<h4><strong>支払方法</strong></h4>
		<label><%= f.radio_button :payment, :0 %>クレジットカード</label>
		<label><%= f.radio_button :payment, :1 %>銀行振込</label>


		<h4>ご自身の住所</h4>
		<label><%= f.radio_button :address, :0 %></label>
		<%= customers.post_code %><%= customers.address %>

		<h4>登録済住所から選択</h4>
		<label><%= f.radio_button :address, :1 %></label>
		<%= f.collection_select :address_id, Address.all, :id, :addess_all_id %>

		<h4>新しいお届け先</h4>
		<label><%= f.radio_button :address, :2 %></label>
		<h4>郵便番号</h4>
		<%= f.text_field :post_code %>

		<h4>住所</h4>
		<%= f.text_field :address %>

		<h4>宛名</h4>
		<%= f.text_field :name %>

		<br>
		<br>

		<%= link_to '確認画面へ進む', orders_judgement %>

		<% end %>

	</div>
</div>