<div class="container">
	<div class="row">
		<h2><strong>ジャンル追加・一覧画面</strong></h2>

		<%= form_for(@genre, url: admins_genres_path) do |f| %>

		<h4>ジャンル名</h4>
		<%= f.text_field :name %>

		<label><%= f.radio_button :display_presence, :true %>有効</label>
		<label><%= f.radio_button :display_presence, :false %>無効</label>

		<%= f.submit '追加' %>

		<% end %>

		<table class="table table-striped">
		<thead>
			<tr>
				<th>ジャンル</th>
				<th>詳細</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>ケーキ</td>
				<td>有効</td>
				<td>編集する</td>
			</tr>
		</tbody>
		</table>
	</div>
</div>