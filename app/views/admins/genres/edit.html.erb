<div class="container">
	<div class="row">
		<h2><strong>ジャンル編集画面</strong></h2>

		<%= form_for(@genre, url: admins_genre_path) do |f| %>

		<h4>ジャンル名</h4>
		<%= f.text_field :name %>

		<label><%= f.radio_button :display_presence, :true %>有効</label>
		<label><%= f.radio_button :display_presence, :false %>無効</label>

		<%= f.submit '変更を保存' %>

		<% end %>

	</div>
</div>