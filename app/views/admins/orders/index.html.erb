<div class="container">
	<div class="row">
		<h2><strong>注文一覧画面</strong></h2>

		<table class="table table-striped">
		<thead>
			<tr>
				<th>購入日時</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>注文ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
			<tr>
				<td><%= order.created_at %></td>
				<td><%= order.customer.last_name %><%= order.customer.first_name %></td>
				<td>orderに紐ずく個数の合計</td>
				<td>enumで出すステータス</td>
			</tr>
			<% end %>
		</tbody>
		</table>
		<%= paginate @orders, class: "paginate" %>
	</div>
</div>