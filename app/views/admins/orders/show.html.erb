<div class="container">
	<div class="row">
		<h2><strong>注文詳細画面</strong></h2>

		<table>
			<tr>
				<th>購入者</th>
				<td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
			</tr>
			<tr>
				<th>配送先</th>
				<td><%= @order.address %></td>
			</tr>
			<tr>
				<th>支払方法</th>
				<td><%= @order.payment %></td>
			</tr>
			<tr>
				<th>注文ステータス</th>
				<td><%= @order.sending_status %></td>
			</tr>
		</table>

		<table class="table table-striped">
		<thead>
			<tr>
				<th>商品名</th>
				<th>単価（税込）</th>
				<th>数量</th>
				<th>小計</th>
				<th>製作ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% sum = 0 %>
			<% @order.order_products.each do |order_product| %>
			<tr>
				<td><%=  %></td>
				<td><%= order_product.price %></td>
				<td><%= order_product.quantity %></td>
				<td>price*quantity</td>
				<td><%= order_product.cook_status %></td>
			</tr>
				<% sub_total = order_product.price * cart_product.quantity %>
		           	<% sum=sum+sub_total %>
			<% end %>
		</tbody>
		</table>

		<table>
			<tr>
				<th>商品合計</th>
				<td><%= number_to_currency(sum*1.1, :precision => 0) %></td>
			</tr>
			<tr>
				<th>送料</th>
				<td><%= number_to_currency(@order.postage, :precision => 0) %></td>
			</tr>
			<tr>
				<th>請求金額合計</th>
				<td><%= number_to_currency(@order.billing_amount, :precision => 0) %></td>
			</tr>
		</table>

	</div>
</div>












