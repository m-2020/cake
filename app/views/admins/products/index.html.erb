<div class="container">
	<div class="row">
		<h2><strong>商品一覧画面</strong></h2>
		<%= link_to '新規登録ボタン', new_admins_product_path %>
		<table class="table table-striped">
		<thead>
			<tr>
				<th>商品ID</th>
				<th>商品名</th>
				<th>税抜価格</th>
				<th>ジャンル</th>
				<th>ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
			<tr>
				<td><%= product.id %></td>
				<td><%= link_to product.name ,admins_product_path(product.id) %></td>
				<td><%= product.price %></td>
				<td><%= product.genre.name %></td>
				<td><%= product.sale_status_str %></td>
			</tr>
			<% end %>
		</tbody>
		</table>
		<%= paginate @products, class: "paginate" %>
	</div>
</div>