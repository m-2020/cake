<div class="container">
	<div class="row">
		<h2><strong>商品 編集画面</strong></h2>

		<%= form_for(@product, url: admins_product_path) do |f| %>

		<%= attachment_image_tag @product, :image, :fill, 100, 100 %>

		<%= f.attachment_field :image %>

		<h4>商品名</h4>
		<%= f.text_field :name %>

		<h4>商品説明</h4>
		<%= f.text_area :text %>

		<h4>ジャンル</h4>
		<%= f.collection_select :genre_id, Genre.all, :id, :name %>

		<h4>税抜価格</h4>
		<%= f.text_field :price %>

		<h4>販売ステータス</h4>
		<%= f.select :sale_status, [['販売中',true],['売切れ',false]] %>

		<br>
		<br>

		<%= f.submit '変更を保存' %>

		<% end %>

	</div>
</div>