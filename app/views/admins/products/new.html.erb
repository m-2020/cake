<div class="container">
	<div class="row">
		<h2><strong>商品 新規登録画面</strong></h2>

		<%= form_for(@product, url: admins_products_path) do |f| %>

		<h4>商品名</h4>
		<%= f.text_field :name %>

		<h4>商品説明</h4>
		<%= f.text_area :text %>

		<h4>ジャンル</h4>
		<%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>

		<h4>税込価格</h4>
		<%= f.text_field :price %>

		<h4>販売ステータス</h4>

		<%= f.submit '新規登録' %>

		<% end %>

	</div>
</div>