
<div class='container'>
  <h1>会員一覧画面</h1>


      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <% @customers.each do |customer| %>

          <tbody>
              <tr>
                <td><%= customer.id %></td>
                <td><%= link_to "#{customer.first_name} #{customer.last_name}", admins_customer_path(customer.id) %></td>
                <td><%= customer.email %></td>
                <td><%= customer.entry_status_str %></td>
              </tr>
          </tbody>
        <% end %>
      </table>
</div>